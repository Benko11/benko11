---
import Avatar from '../assets/Benson-Dunwoody-Looking-Cool.png';
import IndexLayout from '../layouts/IndexLayout.astro'
import ReadingList from '../components/ReadingList.astro';
import QuickFacts from '../components/QuickFacts/QuickFacts.astro';
import Gallery from '../components/Gallery/Gallery.astro';

const getAge = (birthDate: Date) => {
	const today = new Date();
	var age = today.getFullYear() - birthDate.getFullYear();
    var m = today.getMonth() - birthDate.getMonth();
    if (m < 0 || (m === 0 && today.getDate() < birthDate.getDate()))
        age--;
    
    return age;
}

---
<IndexLayout>
	<h1 class="font-bold text-3xl">benko11</h1>
	<div class="flex font-lg gap-16 leading-7 mt-4 flex-col md:flex-row">
		<div class="flex flex-col gap-8">
			<p>
				Hey there! My name is
				Benjamin, I am {getAge(new Date(import.meta.env.BIRTH_DATE))} years old, and I am a
				wanna-be artist, writer, web developer, UNIX enthusiast, but most
				importantly, I am me.
			</p>
			<p>
				I like creating unique experiences, retro terminals, messing with
				computers, listening to music, and I am trying hard to get myself
				to reading books, which I used to read a lot in the past, but
				those times are long gone, sadly.
			</p>
		</div>

		<img
			src={Avatar.src}
			alt=""
			class="w-full md:w-60 h-full md:ml-auto rounded"
		/>
	</div>

	<QuickFacts />

	<h2 class="pt-8 text-bluom-lighter text-xl font-bold">Reading List</h2>
	<ReadingList />

	<h2 class="pt-8 text-bluom-lighter text-xl font-bold">Gallery</h2>
	<p>Random screencaps from my favourite shows, you get a new combination each time</p>
	<Gallery />
</IndexLayout>